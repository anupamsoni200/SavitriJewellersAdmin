<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"

                android:id="@+id/order_history_image"
                android:layout_height="120dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="match_parent"
                        android:text="16/09/2022 dddsf"
                        android:layout_weight="1"
                        android:id="@+id/order_history_date"
                        android:textColor="@color/black"
                        android:gravity="right"

                        android:layout_height="wrap_content"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order No :-"
                        android:layout_weight="2"

                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="ordder No-"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:id="@+id/order_history_orderno"


                        android:layout_height="wrap_content"/>
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Item Count"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:id="@+id/order_history_itemcount"
                        android:textColor="@color/black"

                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:text="Pendding"
                        android:gravity="right"

                        android:layout_weight="1"
                        android:id="@+id/order_history_status"

                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/order_history_ins"
                    android:gravity="right"
                    android:textIsSelectable="true"
                    android:visibility="gone"
                    android:textColor="@color/black"

                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="match_parent"
                    android:text="sdasdsdsd"
                    android:id="@+id/order_history_amt"
                    android:gravity="right"

                    android:textSize="20sp"

                    android:layout_height="wrap_content"/>








            </LinearLayout>

        </LinearLayout>

















    </LinearLayout>

</androidx.cardview.widget.CardView>